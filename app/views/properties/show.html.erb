<h2>Basic Property Info with Price Bands and bookings</h2>

<table>
	<tr>
		<th>Property Name</th>
		<td><%= @property.property_name %></td>
	</tr>
	<tr>
		<th>Location</th>
		<td><%= @property.location_name%></td>
	</tr>
</table>

<table>
	<thead>
	<caption>Price Bands</caption>
		<tr>
			<th>Price Band ID</th>
			<th>Price</th>
			<th>Start Date</th>
			<th>End Date</th>
		</tr>
	</thead>
	<tbody>
		<% @property.price_bands.each do |pb| %>
			<tr>
				<td><%= pb.__pk %></td>
				<td>Â£<%= pb.price %></td>
